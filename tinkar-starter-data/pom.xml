                                <id>generate-data</id>
                                <goals>
                                    <goal>generate-data</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>dev.ikm.maven</groupId>
                        <artifactId>tinkar-maven-plugin</artifactId>
                        <executions>
                            <!-- Run full reasoner starter data -->
                            <execution>
                                <id>full-reasoner</id>
                                <goals>
                                    <goal>run-full-reasoner</goal>
                                </goals>
                                <configuration>
                                    <reinferAllHierarchy>true</reinferAllHierarchy>
                                </configuration>
                            </execution>
                            <!-- Export starter data as a protocol buffers zip file -->
                            <execution>
                                <id>export-data</id>
                                <goals>
                                    <goal>export-tinkar-data</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Attach protocol buffers zip as maven artifact -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                        <version>${build-helper-maven-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>attach-artifacts</id>
                                <goals>
                                    <goal>attach-artifact</goal>
                                </goals>
