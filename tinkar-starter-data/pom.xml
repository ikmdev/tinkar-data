                                <configuration>
                                    <artifacts>
                                        <artifact>
                                            <file>${export-artifact-path}</file>
                                            <type>zip</type>
                                            <classifier>reasoned-example-pb</classifier>
                                        </artifact>
                                    </artifacts>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <pluginManagement>
        <plugins>
            <plugin>
                <groupId>dev.ikm.tinkar</groupId>
                <artifactId>tinkar-data-maven-plugin</artifactId>
                <version>${project.version}</version>
            </plugin>
            <plugin>
                <groupId>dev.ikm.maven</groupId>
                <artifactId>tinkar-maven-plugin</artifactId>
                <version>${tinkar-maven-artifacts.version}</version>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>${build-helper-maven-plugin.version}</version>
            </plugin>
        </plugins>
        </pluginManagement>
    </build>
</project>
