<?xml version="1.0" encoding="UTF-8"?>


<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>dev.ikm.tinkar</groupId>
        <artifactId>tinkar-data</artifactId>
        <version>1.6.0-SNAPSHOT</version>
    </parent>

    <artifactId>tinkar-starter-data</artifactId>
    <packaging>pom</packaging>
    <name>Tinkar Starter Data</name>

    <url>http://maven.apache.org</url>

    <properties>
        <reasoner-type>ElkOwlReasoner</reasoner-type>
        <reinfer-all-hierarchy>true</reinfer-all-hierarchy>
        <export-artifact-path>${project.build.directory}/tinkar-export.zip</export-artifact-path>
    </properties>

    <profiles>
        <!-- Profile to generate unreasoned tinkar starter data -->
        <profile>
            <id>generate-unreasoned-starter-data</id>
            <build>
                <plugins>
                    <!-- Load starter data into data store -->
                    <plugin>
                        <groupId>dev.ikm.tinkar</groupId>
                        <artifactId>tinkar-data-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>generate-data</id>
                                <goals>
                                    <goal>generate-data</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Export starter data as a protocol buffers zip file -->
                    <plugin>
                        <groupId>dev.ikm.maven</groupId>
                        <artifactId>tinkar-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>export-data</id>
                                <goals>
                                    <goal>export-tinkar-data</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Attach protocol buffers zip as maven artifact -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>attach-artifacts</id>
                                <goals>
                                    <goal>attach-artifact</goal>
                                </goals>
                                <configuration>
                                    <artifacts>
                                        <artifact>
                                            <file>${export-artifact-path}</file>
                                            <type>zip</type>
                                            <classifier>unreasoned-pb</classifier>
                                        </artifact>
                                    </artifacts>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <!-- Profile to generate reasoned tinkar starter data -->
        <profile>
            <id>generate-reasoned-starter-data</id>
            <build>
                <plugins>
                    <!-- Load starter data into data store -->
                    <plugin>
                        <groupId>dev.ikm.tinkar</groupId>
                        <artifactId>tinkar-data-maven-plugin</artifactId>
