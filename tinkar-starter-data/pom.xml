                        <artifactId>tinkar-data-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>generate-data</id>
                                <goals>
                                    <goal>generate-data</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>generate-example-data</id>
                                <goals>
                                    <goal>generate-example-data</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>dev.ikm.maven</groupId>
                        <artifactId>tinkar-maven-plugin</artifactId>
                        <executions>
                            <!-- Run full reasoner starter data -->
                            <execution>
                                <id>full-reasoner</id>
                                <goals>
                                    <goal>run-full-reasoner</goal>
                                </goals>
