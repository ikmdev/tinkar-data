                                    <artifacts>
                                        <artifact>
                                            <file>${export-artifact-path}</file>
                                            <type>zip</type>
                                            <classifier>reasoned-pb</classifier>
                                        </artifact>
                                    </artifacts>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
